@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ex: <http://example.org/policy/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:policy001 a odrl:Policy ;
    dct:title "Healthcare Data Access Policy - Germany Only" ;
    dct:description "This policy restricts access to healthcare datasets to users within Germany only" ;
    dct:creator "German Federal Health Ministry" ;
    dct:issued "2024-10-15"^^xsd:date ;
    odrl:permission [
        a odrl:Permission ;
        odrl:target ex:healthcareDataset2024 ;
        odrl:action odrl:read ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:spatial ;
            odrl:operator odrl:eq ;
            odrl:rightOperand <https://www.wikidata.org/resource/Q183>
        ]
    ] ;
    odrl:prohibition [
        a odrl:Prohibition ;
        odrl:target ex:healthcareDataset2024 ;
        odrl:action odrl:distribute ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:spatial ;
            odrl:operator odrl:neq ;
            odrl:rightOperand <https://www.wikidata.org/resource/Q183>
        ]
    ] .

ex:healthcareDataset2024 a dct:Dataset ;
    dct:title "German Healthcare Statistics 2024" ;
    dct:description "Anonymized healthcare data from German hospitals" .
