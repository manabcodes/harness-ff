@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix ex: <http://example.org/policy/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix cc: <http://creativecommons.org/ns#> .

ex:policy003 a odrl:Policy ;
    dct:title "Open Government Data Policy - EU Wide" ;
    dct:description "This policy allows free access to government data across the entire European Union with no geographic restrictions" ;
    dct:creator "EU Open Data Portal" ;
    dct:issued "2025-03-01"^^xsd:date ;
    odrl:permission [
        a odrl:Permission ;
        odrl:target ex:openGovDataset ;
        odrl:action odrl:read ;
        odrl:action odrl:reproduce ;
        odrl:action odrl:distribute ;
        odrl:action odrl:modify ;
        odrl:constraint [
            a odrl:Constraint ;
            odrl:leftOperand odrl:purpose ;
            odrl:operator odrl:isA ;
            odrl:rightOperand ex:NonCommercialUse
        ]
    ] ;
    odrl:permission [
        a odrl:Permission ;
        odrl:target ex:openGovDataset ;
        odrl:action odrl:commercialize ;
        odrl:duty [
            a odrl:Duty ;
            odrl:action odrl:compensate ;
            odrl:constraint [
                a odrl:Constraint ;
                odrl:leftOperand odrl:payAmount ;
                odrl:operator odrl:eq ;
                odrl:rightOperand "100.00"^^xsd:decimal ;
                odrl:unit <http://dbpedia.org/resource/Euro>
            ]
        ]
    ] ;
    odrl:duty [
        a odrl:Duty ;
        odrl:action odrl:attribute ;
        odrl:attributedParty ex:EUDataPortal
    ] .

ex:openGovDataset a dct:Dataset ;
    dct:title "EU Transportation Statistics 2024" ;
    dct:description "Comprehensive transportation data from all EU member states" ;
    dct:spatial <http://publications.europa.eu/resource/authority/continent/EUROPE> ;
    dct:license cc:by-4.0 .

ex:NonCommercialUse a odrl:Purpose ;
    dct:description "Use for non-commercial purposes including research and education" .

ex:EUDataPortal a odrl:Party ;
    dct:title "European Union Open Data Portal" .
